{% extends 'partials/base.html.twig' %}

{% block content %}
    <article id="post" class="max-w-xl mx-auto">
        <header class="mb-6 text-center sm:mb-12">
            <h1 class="text-2xl font-bold sm:text-4xl">{{ page.title }}</h1>
            {% if page.header.headline %}
                <h2 class="mb-2 text-lg font-light sm:text-xl sm:mb-3">{{ page.header.headline }}</h2>
            {% endif %}
            <h3 class="font-light text-gray-600">
            {{ page.content|readingtime }}
                {{ page.header.date|date('d.') }}
                {{ "PNYA.BLOG.THEME.MONTHS_OF_THE_YEAR_SHORT"|ta(page.header.date|date('n') - 1) }}.
                {{ page.header.date|date('Y') }}
            </h3>
        </header>
        <section class="prose">
            {{ page.content|raw }}
        </section>
    </article>

    {% include 'partials/components/nav_prevnext.html.twig' %}
    {% include 'partials/misc/hashover.html.twig' %}
{% endblock %}
