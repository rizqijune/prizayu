{% extends 'partials/base.html.twig' %}

{% block content %}
    <article class="max-w-xl mx-auto">
        <header class="mb-6 text-center sm:mb-12">
            <h1 class="text-2xl font-bold sm:text-4xl">{{ page.title }}</h1>
            <h2 class="mb-2 text-lg font-light sm:text-xl sm:mb-3">{{ page.header.author }}</h2>
            <h2 class="font-light text-gray-600">{{ page.header.date|date('d. M Y') }}</h2>
        </header>
        <section>
            {{ page.content|raw }}
        </section>
    </article>

    {% include 'partials/components/nav_prevnext.html.twig' %}
{% endblock %}
