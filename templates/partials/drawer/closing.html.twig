{# Drawer menu #}
<div class="drawer-side">
	<label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>

	<div class="bg-base-200 text-base-content min-h-full w-80 ">
		<button type="button" data-drawer-hide="my-drawer" aria-controls="my-drawer" class="btn btn-circle btn-ghost absolute top-2.5 end-2.5">
			<span class="icon-[ph--gear] h-6 w-6"></span>
			<span class="sr-only">Close menu</span>
		</button>
		<div class="flex flex-col p-4 justify-center border-b-2 border-neutral-400 dark:border-neutral-700">
			{% include 'partials/misc/logo.html.twig' %}
			{% include 'partials/langswitcher.html.twig' %}
		</div>
		<!-- Sidebar content here -->
		<ul class="menu p-4 text-xl font-bold">

			{% for page in pages.children.visible %}
				<li>
					<a href="{{ page.url }}">{{ page.menu }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div></div>{# End Drawer menu #}
