{# Drawer menu #}
<div class="z-10 drawer-side">
	<label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>

	<div class="min-h-full bg-base-200 text-base-content w-80 ">
		<button type="button" data-drawer-hide="my-drawer" aria-controls="my-drawer" class="btn btn-circle btn-ghost absolute top-2.5 end-2.5">
			<span class="icon-[ph--gear] h-6 w-6"></span>
			<span class="sr-only">Settings</span>
		</button>
		<div class="flex flex-col justify-center p-4 border-b-2 border-base-300">
			{% include 'partials/misc/logo.html.twig' %}
			{% include 'partials/langswitcher.html.twig' %}
		</div>
		<!-- Sidebar content here -->
		<nav class="mt-3">
			<h6 class="px-3 text-xs text-gray-500 uppercase P-1 dark:text-gray-400">MAIN</h6>
			<ul class="font-bold menu">

				{% for page in pages.children.visible %}
					<li>
						<a href="{{ page.url }}">{{ page.menu }}</a>
					</li>
				{% endfor %}
			</ul>
			<h6 class="p-1 px-3 text-xs text-gray-500 uppercase dark:text-gray-400">Legal</h6>
			<ul class="font-bold menu">
				{% for link in config.theme.footer.links %}
					<li><a href="{{ link.url }}">{{ link.text }}</a></li>

				{% endfor %}
			</ul>
		</nav>
		<div class="absolute bottom-0 w-full px-10 py-4 mx-auto border-t bg-base-200 text-base-content border-base-300">
			<div class="grid pb-3">
				<p class="items-center mx-auto font-semibold">Follow Us</p>
			</div>
			<nav class="grid grid-flow-col gap-4 ">
				<div class="place-self-center">
					{% for link in config.theme.footer.social %}
						<a class="px-2 btn-circle btn hover:btn-{{ link.color }}" href="{{ link.url }}">
							<span class="{{ link.icon }} w-7 h-7"></span>
						</a>
					{% endfor %}
				</div>
			</nav>
		</div>

	</div>
	{# Drawer side close tag #}
</div>
{# Drawer close tag #}
</div>
